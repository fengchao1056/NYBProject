<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_fafafa">

    <TextView
        android:id="@+id/tv_pinpai_slist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/text_646464"
        android:textSize="14sp" />


    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/tv_state_slist"
        android:background="@drawable/yiquhuo"

        />

    <TextView
        android:id="@+id/tv_state_slist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:text="已取货"
        android:textColor="@color/text_green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_zl_slist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:text=""
        android:textColor="@color/text_909090"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/tv_zl_slist"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ygj_slist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/hint_cl"

            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_tjg_slist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="成交价："

                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_cjj_slist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@color/ball_fd"
                android:textSize="14sp" />

        </LinearLayout>


</LinearLayout>


    <TextView
        android:layout_marginBottom="8dp"
        android:id="@+id/tv_num_slist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_zl_slist"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="@color/text_909090"
        android:textSize="14sp" />


</RelativeLayout>