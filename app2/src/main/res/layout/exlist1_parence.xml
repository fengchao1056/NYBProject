<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <TextView
        android:id="@+id/tv_pinpai_plist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="6-1234-110"
        android:textColor="@color/text_646464"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/tv_state_plist"
        android:background="@drawable/daiquhuo" />

    <TextView
        android:id="@+id/tv_state_plist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/iv_uporown_plist"
        android:text="待取货"
        android:textColor="@color/text_green"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_uporown_plist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/down" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_state_plist"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:id="@+id/ll_leftitem_plist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量："
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_count_plist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预估单价："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_danjia_plist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_xztext_plist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修正单价："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_xzdj_plist"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ed_box"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/块"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重量："
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_zongl_plist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_tjg_plist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预估总价："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_zongjia_plist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修正总价："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_xzzj_plist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>