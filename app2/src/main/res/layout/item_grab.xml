<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">


    <com.myzyb2.appNYB2.ui.view.CircleImageView
        android:id="@+id/iv_head_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_toRightOf="@+id/iv_head_photo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_646464"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="重量："
                android:textColor="@color/text_646464"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_weight_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="@color/text_646464"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="kg"
                android:textColor="@color/text_646464"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:text="数量："
                android:textColor="@color/text_646464"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="@color/text_646464"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="块"
                android:textColor="@color/text_646464"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_adrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="2"
            android:padding="0dp"
            android:lineSpacingExtra="3dp"
            android:text=""
            android:textColor="#999999"
            android:textSize="10sp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_grab"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:layout_width="60dp"
            android:text="抢单"
            android:id="@+id/btn_grab"
            android:textColor="@color/text_green"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_circle_green"
            android:layout_height="25dp" />
    </RelativeLayout>

</RelativeLayout>