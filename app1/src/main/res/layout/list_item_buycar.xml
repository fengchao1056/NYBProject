<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@color/bg_fafafa">

    <TextView
        android:id="@+id/tv_pinpai_buycar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="品牌"
        android:textColor="@color/text_646464"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_xinghao_buycar"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_pinpai_buycar"
        android:singleLine="true"
        android:text="6-1234-110"
        android:textColor="@color/text_646464"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_jiage_buycar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pinpai_buycar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="¥780.00"
        android:textColor="@color/ball_fd"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_zhongl_buycar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_jiage_buycar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="总重量："
        android:textColor="@color/text_909090"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_zhongnum_buycar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_jiage_buycar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_zhongl_buycar"
        android:text="78:kg"
        android:textColor="@color/text_909090"
        android:textSize="13dp" />


    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/iv_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/et_count"

            android:background="@drawable/clickable_addandremove" />

        <EditText
            android:id="@+id/et_count"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_add"
            android:background="@drawable/ed_box"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/ball_fd"
            android:visibility="visible" />

        <Button
            android:id="@+id/iv_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/submit_add"
            android:onClick="onClick" />


    </LinearLayout>


</RelativeLayout>