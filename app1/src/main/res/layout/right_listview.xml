<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="80dp"
    android:background="@color/bg_fafafa"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="超威"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginLeft="15dp"
        android:text="3-DZM-10"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="¥140"
        android:textColor="@color/ball_fd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_price"
        android:text="元/块" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/iv_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/clickable_addandremove"
            android:enabled="false" />

        <EditText

            android:id="@+id/et_count"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ed_box"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/ball_fd"
            android:visibility="visible" />

        <Button
            android:id="@+id/iv_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/submit_add"
            android:onClick="onClick" />


    </LinearLayout>


</RelativeLayout>