<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_allzl_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:text="总重量："
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_zlnum_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/tv_allzl_last"
        android:text=""
        android:textColor="@color/ball_fd"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_allprice_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_allzl_last"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:text="总价格："
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_price_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_allzl_last"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/tv_allprice_last"
        android:text=""
        android:textColor="@color/ball_fd"
        android:textSize="12dp" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp">

        <TextView
            android:id="@+id/tv_count_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="数量："
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_countnum_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv_count_last"
            android:text=""
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_jifen_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_count_last"
            android:layout_marginTop="7dp"
            android:text="积分："
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_numjifen_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_count_last"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv_jifen_last"
            android:text=""
            android:textColor="@color/text_green"
            android:textSize="12dp" />


    </RelativeLayout>


</RelativeLayout>