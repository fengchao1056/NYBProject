<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@drawable/yd_bg"-->


    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/yd_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/yz_reg" />

        <View

            style="@style/style_line_green"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:id="@+id/ll_regandlog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日回收价"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_model"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/kg"
                android:textSize="8sp" />


        </LinearLayout>

        <View
            android:id="@+id/view"
            style="@style/style_line_green"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tv_xh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text=""
            android:textSize="14dp"
            android:textColor="#787878"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_xh2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" "
            android:textColor="#787878"
            android:textSize="14dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_reg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/butten_green"
            android:onClick="onClick"
            android:text="@string/botten_reg"
            android:textColor="@color/text_white"
            android:textSize="18dp" />

        <Button

            android:id="@+id/bt_log"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/butten_blue"
            android:onClick="onClick"
            android:text="@string/botten_log"
            android:textColor="@color/text_white"
            android:textSize="18dp" />


    </LinearLayout>


</LinearLayout>
